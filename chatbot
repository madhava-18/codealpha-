# === Basic Rule-Based Chatbot ===

def chatbot_response(user_input):
    """Return a chatbot reply based on user input."""
    user_input = user_input.lower()  # Convert to lowercase for easier matching

    if "hello" in user_input or "hi" in user_input:
        return "Hi there! ğŸ˜Š"
    elif "how are you" in user_input:
        return "I'm fine, thanks for asking! How about you?"
    elif "bye" in user_input or "goodbye" in user_input:
        return "Goodbye! Have a great day! ğŸ‘‹"
    elif "your name" in user_input:
        return "I'm ChatBot â€” your friendly assistant!"
    else:
        return "Sorry, I don't understand that yet. ğŸ¤–"

def main():
    print("ChatBot: Hello! Type 'bye' to end the chat.")
    
    while True:
        user_input = input("You: ")
        response = chatbot_response(user_input)
        print("ChatBot:", response)

        if "bye" in user_input.lower():
            break

# Run the chatbot
main()
